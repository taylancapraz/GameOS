<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.canta.project3.LoginActivity">

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/go_button"
        android:layout_alignStart="@+id/go_button"
        android:layout_below="@+id/player_name_edittext"
        android:layout_marginTop="14dp"
        android:background="@drawable/editextstyle"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password_edit_text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_true"
        android:padding="10dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/myWhite"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/go_button"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_go_back"
        android:padding="10dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/myWhite"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="GameOS"
        android:textColor="@color/myWhite"
        android:textSize="50sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Enter Your Username - Password"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/player_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/password_edit_text"
        android:layout_alignStart="@+id/password_edit_text"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="24dp"
        android:background="@drawable/editextstyle"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/taylan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sign_in_button"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_white"
        android:text="taylan"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/can_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        android:text="CAN"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/taylan_button"
        android:layout_alignBottom="@+id/taylan_button"
        android:layout_alignEnd="@+id/sign_in_button" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/taylan_button"
        android:layout_alignTop="@+id/taylan_button"
        android:layout_marginRight="60dp"
        android:layout_toStartOf="@+id/can_button"
        android:visibility="visible"
        app:indicatorColor="@color/myWhite"
        app:indicatorName="LineScalePulseOutIndicator" />


</RelativeLayout>




